{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.article_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.article_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}
        <a href="{{ url('article_create') }}" title="{{ 'action.create_article'|trans }}">
            {{ 'action.create_article'|trans }}</a>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'label.id'|trans }}</th>
                <th>{{ 'label.created_at'|trans }}</th>
                <th>{{ 'label.updated_at'|trans }}</th>
                <th>{{ 'label.title'|trans }}</th>
                <th>{{ 'label.category'|trans }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for article in pagination.items %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.createdAt|date('Y/m/d') }}</td>
                    <td>{{ article.updatedAt|date('Y/m/d') }}</td>
                    <td>{{ article.title }}</td>
                    <td>{{ article.category.title }}</td>
                    <td>
                        <a href="{{ url('article_show', {id: article.id}) }}" title="{{ 'action.view'|trans }}">
                            {{ 'action.view'|trans }}
                        </a>
                        <a href="{{ url('article_edit', {id: article.id}) }}" title="{{ 'action.edit'|trans }}">
                            {{ 'action.edit'|trans }}
                        </a>
                        <a href="{{ url('article_delete', {id: article.id}) }}" title="{{ 'action.delete'|trans }}">
                            {{ 'action.delete'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
    {% else %}
        <p>
            {% include 'default/_single_alert_message.html.twig' with {
                type: 'warning',
                message: 'message.empty_list'|trans
            } %}
        </p>
    {% endif %}
{% endblock %}