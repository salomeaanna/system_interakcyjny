{% extends 'base.html.twig' %}

{% block title %}
    {{ category.title }}
{% endblock %}

{% block body %}
    {% if category is defined and category|length %}

        <h1>{{ category.title }}</h1>
        <div class="container">
            <p>{{ category.title }}</p>
            <a href="{{ url('category_index') }}" title="{{ 'action.back_to_category_list'|trans }}">
                {{ 'action.back_to_category_list'|trans }}
            </a>
        </div>
    {% endif %}
{% endblock %}